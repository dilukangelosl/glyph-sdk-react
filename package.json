{
	"name": "@use-glyph/sdk-react",
	"version": "0.4.1",
	"description": "",
	"workspaces": {
		"packages": [
			"lib",
			"examples/cross-app",
			"examples/privy",
			"examples/rainbowkit",
			"examples/connectkit",
			"examples/dynamic",
			"examples/native-integration",
			"examples/index"
		]
	},
	"scripts": {
		"dev": "pnpm --filter @use-glyph/sdk-react watch",
		"build": "pnpm --filter @use-glyph/sdk-react build",
		"lint": "pnpm --filter @use-glyph/sdk-react lint",
		"dev:cross-app": "pnpm --filter cross-app dev",
		"build:cross-app": "pnpm --filter cross-app build",
		"run:cross-app": "pnpm --filter cross-app preview",
		"dev:privy": "pnpm --filter privy dev",
		"build:privy": "pnpm --filter privy build",
		"run:privy": "pnpm --filter privy preview",
		"dev:rainbowkit": "pnpm --filter rainbowkit dev",
		"build:rainbowkit": "pnpm --filter rainbowkit build",
		"run:rainbowkit": "pnpm --filter rainbowkit preview",
		"dev:connectkit": "pnpm --filter connectkit dev",
		"build:connectkit": "pnpm --filter connectkit build",
		"run:connectkit": "pnpm --filter connectkit preview",
		"dev:native-integration": "pnpm --filter native-integration dev",
		"build:native-integration": "pnpm --filter native-integration build",
		"run:native-integration": "pnpm --filter native-integration preview",
		"dev:dynamic": "pnpm --filter dynamic dev",
		"build:dynamic": "pnpm --filter dynamic build",
		"run:dynamic": "pnpm --filter dynamic preview",
		"build:demos": "concurrently \"pnpm run build:cross-app\" \"pnpm run build:privy\" \"pnpm run build:rainbowkit\" \"pnpm run build:connectkit\" \"pnpm run build:native-integration\" \"pnpm run build:dynamic\"",
		"build:all": "pnpm run build && pnpm run build:demos",
		"start:privy": "pnpm --filter privy preview",
		"start:cross-app": "pnpm --filter cross-app preview",
		"start:rainbowkit": "pnpm --filter rainbowkit preview",
		"start:connectkit": "pnpm --filter connectkit preview",
		"start:native-integration": "pnpm --filter native-integration preview",
		"start:dynamic": "pnpm --filter dynamic preview",
		"start:all": "concurrently \"pnpm run start:privy\" \"pnpm run start:cross-app\" \"pnpm run start:rainbowkit\" \"pnpm run start:connectkit\" \"pnpm run start:native-integration\" \"pnpm run start:dynamic\"",
		"start:prod": "node examples/server.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.19.0",
