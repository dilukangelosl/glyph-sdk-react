		"rimraf": "^6.0.1",
		"tailwind-scrollbar": "3.1.0",
		"tailwindcss": "^3.4.17",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.23.0",
		"vite": "6.1.0",
		"vite-plugin-dts": "^4.5.0"
	},
